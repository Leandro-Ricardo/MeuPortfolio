<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leandro Ricardo de Sousa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeuPortfolio.styles.css" asp-append-version="true" />
</head>

<body class="backgroundimage">
    <header>        
        <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong">            
            <div class="container text-lg-center">              
                <a class="navbar-brand" asp-controller="Home" asp-action="Perfil"></a>
                <div class="" id="navbarSupportedContent">               
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <strong><a class="nav-link active" asp-controller="Home" asp-action="Perfil">Início</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Projetos">Projetos</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Sobre">Sobre</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Contato">Contato</a></strong>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="https://www.linkedin.com/in/leandroricardodesousa/"><img src="~/lib/img/logolinkedin.png" alt="Logo Linkedin" height="22" width="24"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="https://github.com/leandroricardodev"><img src="~/lib/img/logogithubamarelo.png" alt="Logo Github" height="25" width="25"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container none box-shadow mb-0 text-lg-center text-white">
            &copy; 2023 - Leandro Ricardo de Sousa - (21) 97253-6323
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
